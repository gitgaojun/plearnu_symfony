{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Productid</th>
                <th>Userid</th>
                <th>Datecreated</th>
                <th>Productcategoryid</th>
                <th>Datelastmodified</th>
                <th>Datelastemptied</th>
                <th>Name</th>
                <th>Description</th>
                <th>Shortdescription</th>
                <th>Clickcount</th>
                <th>Keywords</th>
                <th>Status</th>
                <th>Slug</th>
                <th>Iscod</th>
                <th>Isfreeshipping</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.productId }) }}">{{ entity.productId }}</a></td>
                <td>{{ entity.userId }}</td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.productCategoryId }}</td>
                <td>{% if entity.dateLastModified %}{{ entity.dateLastModified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.dateLastEmptied %}{{ entity.dateLastEmptied|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.shortDescription }}</td>
                <td>{{ entity.clickCount }}</td>
                <td>{{ entity.keywords }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.isCod }}</td>
                <td>{{ entity.isFreeShipping }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.productId }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.productId }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
